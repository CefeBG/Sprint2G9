<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h1>Actualizar Tarea</h1>

          <form action="/tarea/{{tarea._id}}/editar" method="post">
            <div class="mb-3">
              <input class="form-control" type="text" name="titulo" value="{{tarea.titulo}}" />
            </div>
            <div class="mb-3">
              <input class="form-control" type="text" name="autor" value="{{tarea.autor}}" />
            </div>
            <div class="mb-3">
              <textarea class="form-control" name="descripcion" rows="3">{{tarea.descripcion}}</textarea>
            </div>
            <div class="col-md-12">
              <label for="nivel" class="form-label">Nivel</label>
              <select class="form-select w-100" id="nivel" name="nivel" value="{{tarea.nivel}}" required>
                <option selected disabled value="">Selecciona...</option>
                <option>Importancia Baja</option>
                <option>Importancia Media</option>
                <option>Urgente</option>
              </select>
            </div>
            <div class="d-flex justify-content-center mt-2">
              <button class="btn btn-primary" type="submit">Actualizar</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>